<header>
  <nav class="navbar navbar-expand-md navbar-dark" style="background-color: #aa19af;">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <% if(user) { %>
          <h6>Logged in as: <%= user.email %></h6>
          <main style="margin: 1em;">
            <form class="form-inline" method="POST" action ='/logout'>
              <button type="submit" class="btn btn-dark mb-2">Logout</button>
            </form>
          </main>
        <% } else { %>
          <main style="margin: 1em;">
            <form class="form-inline" method="POST" action ='/login'>
              <div class="form-group mb-2">
                <!-- <label for=username>Enter Username: </label> -->
                <input type="text" class="form-control mr-sm-2" name="username" placeholder="Username">
              </div>
              <button type="submit" class="btn btn-dark mb-2">Login</button>
            </form>
          </main>
        <% } %>
        </div>
      </div>
  </nav>
</header>